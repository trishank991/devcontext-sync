# Production Environment Variables for DevContext Sync Backend
# Copy this to .env and fill in your values

# ===========================================
# REQUIRED - Supabase Database
# ===========================================
# Get from: Supabase Dashboard > Project Settings > Database > Connection string
# Use the "Transaction pooler" connection string for better performance
DATABASE_URL=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres

# Database pool size (default: 10, adjust based on your Fly.io VM size)
DB_POOL_SIZE=10

# ===========================================
# REQUIRED - Authentication
# ===========================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your-secure-jwt-secret-min-32-chars

# Admin secret for license generation endpoint
# Generate with: openssl rand -base64 32
ADMIN_SECRET=your-admin-secret-key

# ===========================================
# OPTIONAL - Rate Limiting
# ===========================================
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# ===========================================
# OPTIONAL - Server Config
# ===========================================
NODE_ENV=production
PORT=3000

# ===========================================
# Fly.io Secrets (set via CLI, not in file)
# ===========================================
# fly secrets set DATABASE_URL="your-connection-string"
# fly secrets set JWT_SECRET="your-jwt-secret"
# fly secrets set ADMIN_SECRET="your-admin-secret"
