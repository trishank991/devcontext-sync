{
  "name": "devcontext-sync",
  "displayName": "DevContext Sync",
  "description": "Access your AI coding context from ChatGPT, Claude & more directly in VS Code",
  "version": "0.1.0",
  "publisher": "devcontext",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Snippets"
  ],
  "keywords": [
    "ai",
    "chatgpt",
    "claude",
    "gemini",
    "context",
    "snippets",
    "knowledge",
    "cursor"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "devcontext",
          "title": "DevContext Sync",
          "icon": "images/sidebar-icon.svg"
        }
      ]
    },
    "views": {
      "devcontext": [
        {
          "id": "devcontext.projects",
          "name": "Projects"
        },
        {
          "id": "devcontext.snippets",
          "name": "Code Snippets"
        },
        {
          "id": "devcontext.knowledge",
          "name": "Knowledge Base"
        }
      ]
    },
    "commands": [
      {
        "command": "devcontext.refresh",
        "title": "DevContext: Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "devcontext.importFromFile",
        "title": "DevContext: Import from File"
      },
      {
        "command": "devcontext.search",
        "title": "DevContext: Search",
        "icon": "$(search)"
      },
      {
        "command": "devcontext.copySnippet",
        "title": "Copy to Clipboard",
        "icon": "$(copy)"
      },
      {
        "command": "devcontext.insertSnippet",
        "title": "Insert at Cursor",
        "icon": "$(insert)"
      },
      {
        "command": "devcontext.openSnippetPreview",
        "title": "Preview Snippet",
        "icon": "$(open-preview)"
      },
      {
        "command": "devcontext.switchProject",
        "title": "DevContext: Switch Project"
      },
      {
        "command": "devcontext.injectContext",
        "title": "DevContext: Inject Relevant Context",
        "icon": "$(arrow-circle-down)"
      },
      {
        "command": "devcontext.addContextToClipboard",
        "title": "DevContext: Add Context to Clipboard",
        "icon": "$(clippy)"
      },
      {
        "command": "devcontext.showRelevantContext",
        "title": "DevContext: Show Relevant Context",
        "icon": "$(lightbulb)"
      },
      {
        "command": "devcontext.injectToCopilot",
        "title": "DevContext: Inject to Copilot Instructions"
      },
      {
        "command": "devcontext.injectToCursor",
        "title": "DevContext: Inject to .cursorrules"
      }
    ],
    "keybindings": [
      {
        "command": "devcontext.injectContext",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d",
        "when": "editorTextFocus"
      },
      {
        "command": "devcontext.addContextToClipboard",
        "key": "ctrl+alt+d",
        "mac": "cmd+alt+d",
        "when": "editorTextFocus"
      },
      {
        "command": "devcontext.showRelevantContext",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "devcontext.refresh",
          "when": "view =~ /devcontext\\./",
          "group": "navigation"
        },
        {
          "command": "devcontext.search",
          "when": "view == devcontext.knowledge || view == devcontext.snippets",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "devcontext.copySnippet",
          "when": "viewItem == snippet",
          "group": "inline"
        },
        {
          "command": "devcontext.insertSnippet",
          "when": "viewItem == snippet",
          "group": "inline"
        }
      ],
      "editor/context": [
        {
          "command": "devcontext.injectContext",
          "group": "devcontext@1",
          "when": "editorTextFocus"
        },
        {
          "command": "devcontext.showRelevantContext",
          "group": "devcontext@2",
          "when": "editorTextFocus"
        }
      ]
    },
    "configuration": {
      "title": "DevContext Sync",
      "properties": {
        "devcontext.dataPath": {
          "type": "string",
          "default": "",
          "description": "Path to DevContext data file (exported from browser extension)"
        },
        "devcontext.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh when data file changes"
        },
        "devcontext.showSourceLinks": {
          "type": "boolean",
          "default": true,
          "description": "Show source links (ChatGPT, Claude, etc.) in snippets"
        },
        "devcontext.contextInjection.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic context detection and injection features"
        },
        "devcontext.contextInjection.maxItems": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "maximum": 20,
          "description": "Maximum number of context items to inject"
        },
        "devcontext.contextInjection.minRelevanceScore": {
          "type": "number",
          "default": 15,
          "minimum": 0,
          "maximum": 100,
          "description": "Minimum relevance score for context items (0-100)"
        },
        "devcontext.contextInjection.format": {
          "type": "string",
          "enum": ["markdown", "plain", "xml"],
          "default": "markdown",
          "description": "Output format for injected context"
        },
        "devcontext.contextInjection.includeMetadata": {
          "type": "boolean",
          "default": true,
          "description": "Include source and date metadata in injected context"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^2.22.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/devcontext/devcontext-sync"
  },
  "license": "MIT"
}
